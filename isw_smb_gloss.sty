% adapted from http://tex.stackexchange.com/a/161604
\newglossarystyle{symbunitlong}{%
	\setlength\glsdescwidth{0.65\linewidth}
  \renewenvironment{theglossary}%
    {\begin{longtable}{p{0.05\linewidth}lcp{\glsdescwidth}}}%
    {\end{longtable}}%
  \renewcommand*{\glossaryheader}{}%
  \renewcommand*{\glsgroupheading}[1]{}%
  \renewcommand{\glossentry}[2]{%
		\ifglsdescsuppressed{##1}%
			%{\medskip\newline\glsentryitem{##1}\glstreenamefmt{\glstarget{##1}{\glossentryname{##1}}} & & }
			{\tabularnewline\multicolumn{4}{l}{\glsentryitem{##1}\glstreenamefmt{\glstarget{##1}{\glossentryname{##1}}}}}
			{ & \glsentryitem{##1}\glstarget{##1}{\glossentryname{##1}} & \glsunit{##1} & \glossentrydesc{##1}}
			\tabularnewline
  }%
	\renewcommand{\subglossentry}[3]{%
		& \glssubentryitem{##2}\glstarget{##2}{\glossentryname{##2}} & \glsunit{##2} & \glossentrydesc{##2}
		\tabularnewline
  }%
	\renewcommand*{\glsgroupskip}{%
	\ifglsnogroupskip\else & &\tabularnewline\fi}%
}

\newglossarystyle{symbunitlonga}{%
\setglossarystyle{long3col}% base this style on the list style
\renewenvironment{theglossary}{% Change the table type --> 3 columns
	{\begin{longtable}{lp{\glsdescwidth}p{\glspagelistwidth}}}%
{\end{longtable}}%
  \begin{longtable}{lp{0.6\glsdescwidth}>{\centering\arraybackslash}p{2cm}}}%
  {\end{longtable}}%
\renewcommand*{\glossentry}[2]{%  Change the displayed items
\glstarget{##1}{\glossentryname{##1}} %
& \glsunit{##1}
& \glossentrydesc{##1}  \tabularnewline
}
}

